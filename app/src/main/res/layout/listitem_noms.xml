<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:transitionName="nom_panel"
        android:layout_height="86dp">

    <TextView
            android:id="@+id/text_nom_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            tools:text="FoodyNomsHere"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/image_test"
            app:layout_constraintHorizontal_bias="0.0"/>

    <ImageView
            android:id="@+id/image_test"
            android:layout_width="64dp"
            android:layout_height="0dp"
            tools:srcCompat="@drawable/ai_launcher"
            android:contentDescription="@string/content_description_image"
            android:transitionName="nom_image"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@drawable/ai_launcher"
            android:paddingRight="8dp"/>

    <TextView
            tools:text="SubtitleHere"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_nom_subtitle"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/text_nom_title"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textStyle="italic"
            app:layout_constraintVertical_bias="0.0"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/text_last_event"
            app:layout_constraintHorizontal_bias="0.0"/>
    <TextView
            tools:text="[0]"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_last_event"
            app:layout_constraintEnd_toStartOf="@+id/image_test"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
</android.support.constraint.ConstraintLayout>